.hidden {
    visibility: hidden;
}

CourseCardBackground {
    content-align: center middle;
    height: auto;
}

#split_course_area {
    height: auto;
    layout: grid;
    grid-size: 2 1;
    grid-columns: 30 5fr;
    grid-rows: 1fr;
}

Screen {
    height: 100%;
}

AssignmentArea {
    layout: grid;
    grid-size: 1 3;
    grid-columns: 1fr;
    grid-rows: 5 5 1fr;
}

AssignmentArea #assignment_buttons {
    max-height: 3;
    layout: horizontal;
}